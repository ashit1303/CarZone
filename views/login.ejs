<body>
        <% include partials/navbar.ejs %>

    <script>
    
    $(document).ready(function () {
      setTimeout(function () {
        $("#allAlert").css("display", "none");
      }, 7000);
    });
  </script>
        <% if (errorMessage) { %>
            <div class="has-warning warner text-center" id="allAlert"><%= errorMessage %></div>
        <% } %>
<!-- Sing in  Form -->
    <div class="main">
        <section class="sign-in">
            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="images/car2.png" alt="sing up image"></figure>
                        <a href="/signup" class="signup-image-link">Create an account</a>
                    </div>

                    <div class="signin-form">
                        <h2 class="form-title">Login</h2>
                        <form method="POST" class="register-form" action="/login" id="login-form">
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="email" name="email" id="email" placeholder="Your email"/>
                            </div>
                            <div class="form-group">
                                <label for="password"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" name="password" id="password" placeholder="Password" value="<%= oldInput.password %>"/> 
                            </div>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="btn-success" value="Log in"/>
                            </div>
                        </form>
                            <div class="form-group form-button">
                                <input  onclick="location.href='/reset';" id="signin" class="btn-warning text-center"
                                 value="Forget Password"/>
                            </div>
                        
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>
